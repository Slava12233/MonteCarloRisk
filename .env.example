# Google ADK Agent Starter Kit - Environment Variables

# Google API Key (for Google AI Studio)
# Required for using Gemini models through Google AI Studio
GOOGLE_API_KEY=your_google_api_key_here

# Google Cloud Project Settings
# Required for Vertex AI deployment and services
GOOGLE_CLOUD_PROJECT=your_gcp_project_id
GOOGLE_CLOUD_REGION=us-central1

# Vertex AI Settings
# Set to TRUE to use Vertex AI instead of Google AI Studio
GOOGLE_GENAI_USE_VERTEXAI=FALSE

# Optional: Path to service account key file
# Required if not using application default credentials
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# Optional: Vertex AI Search Datastore ID
# Required only if using Vertex AI Search tool
VERTEX_AI_SEARCH_DATASTORE_ID=projects/your_project/locations/your_region/collections/default_collection/dataStores/your_datastore_id

# Optional: Logging Level
# Set the logging level for the application (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Optional: Development Settings
# Set to TRUE to enable development mode with additional logging and debugging
DEV_MODE=TRUE

# Optional: Web UI Settings
# Port for the local development web UI
WEB_UI_PORT=8000
